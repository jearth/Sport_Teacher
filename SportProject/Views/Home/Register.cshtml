    // 근무이력 유효성 검사 함수
    function ValidateWorkCode() {
        var formDataObject = $('#main_form').serializeObject();
        var isValid = true;

        // 근무 이력 테이블의 각 행을 돌면서 유효성 검사
        $(".Employment-History-Tr").each(function (index, element) {
            var workPlace = formDataObject[`Work[${index}].WorkPlace`];
            var startDT = formDataObject[`Work[${index}].StartDT`];
            var endDT = formDataObject[`Work[${index}].EndDT`];
            var sportNo = formDataObject[`Work[${index}].SportNo`];

            // 근무기관, 근무시작일이 모두 입력되었는지 확인
            if ($.trim(workPlace).length === 0 || $.trim(startDT).length === 0) {
                isValid = false;
                alert("근무기관, 근무시작일은 필수 입력값입니다.");
                return false;
            }

            // 근무시작일이 현재 날짜보다 미래인지 확인
            if (new Date(startDT) > new Date()) {
                isValid = false;
                alert("근무시작일은 현재 날짜보다 미래일 수 없습니다.");
                return false;
            }

            // 근무종료일이 근무시작일보다 빠른지 확인
            if ($.trim(endDT).length !== 0) {
                if (new Date(endDT) < new Date(startDT)) {
                    isValid = false;
                    alert("근무종료일은 근무시작일보다 빠를 수 없습니다.");
                    return false;
                }
            }
        });

        return isValid;
    }


